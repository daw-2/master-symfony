<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Master{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="{{ path('home') }}">Master</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar">
                <div class="navbar-nav">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                    <a class="nav-link" href="{{ path('product_index') }}">Produits</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link" href="{{ path('product_create') }}">Cr√©er un produit</a>
                    {% endif %}
                </div>

                <div class="navbar-nav ml-auto">
                    {% if app.user %}
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">{{ app.user.email }}</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    </div>
                    {% else %}
                    <a class="btn btn-primary" href="{{ path('app_register') }}">Inscription</a>
                    <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                    {% endif %}
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
            <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
